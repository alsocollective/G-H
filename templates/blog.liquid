{% capture blogtitle %}{{blog.handle}}-carousel{% endcapture %}
{% if blogs[blogtitle].articles[0] %} 
<div class="slideshow">
	{% for article in blogs['story'].articles limit: 3 %}
		<div>{{article.content}}</div>
	{% endfor %}
</div>
{% endif %}

<div class="blog">
	{% assign bigCount = 3 %}
	{% assign bigNext = 2 %}
	{% assign bigIndex = 1 %}
	<div class="center">
	<h1>{{blog.title}}</h1>
	{% assign page = pages[blog..handle] %}
	{{page.content}}
	<h3 class="lined"></h3>
	<ul>
		{% for article in blog.articles %}
			<li class="{% if bigNext == bigIndex %}wide{% assign bigNext = bigNext|plus:bigCount %}{% if bigCount == 2 %}{% assign bigCount = 3 %}{% else %}{% assign bigCount = 2 %}{% endif %}{% endif %}">
				<a href="{{ article.url }}"> {{article.excerpt}} <h3>{{article.title}}</h3></a>
				{% assign bigIndex = bigIndex|plus:1 %}
			</li>
		{% endfor %}
	</ul>

	</div>
</div>