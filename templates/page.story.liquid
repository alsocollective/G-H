<div class="slideshow">
	{% for article in blogs['story'].articles limit: 3 %}
		<div>{{article.content}}</div>
	{% endfor %}
</div>

<div class="story">
{% comment %}	<div class="pagecontent">
		{{ page.content }}
	</div>{% endcomment %}

	<h3 class="lined">{{ pages["good-and-hec"].title }}</h3>
	<div class="gandh">
		{{ pages["good-and-hec"].content }}
		<div class="clear"></div>
	</div>

	<h3 class="lined">Our Philosophy</h3>
	<div class="philosophy">
		{{ pages["philosophy"].content }}
	</div>

	<h3 class="lined">Our Garments <a href="https://good-hec.myshopify.com/admin/articles?query=Our+Garments">Edit here</a></h3>
	<div class="process">
	{% assign blog = blogs["garments"] %}
	{% assign bigCount = 3 %}
	{% assign bigNext = 1 %}
	{% assign bigIndex = 1 %}
	<ul>
		{% for article in blog.articles %}<li class="{% if bigNext == bigIndex %}wide{% assign bigNext = bigNext|plus:bigCount %}{% if bigCount == 3 %}{% assign bigCount = 1 %}{% else %}{% assign bigCount = 3 %}{% endif %}{% endif %}">
				{{article.content}}
				{% assign bigIndex = bigIndex|plus:1 %}
			</li>{% endfor %}
	</ul>

	</div>

	<h3 class="lined">Our Benches <a href="https://good-hec.myshopify.com/admin/articles?query=Benches">Edit here</a></h3>
	<div class="process">
	{% assign blog = blogs["benches"] %}
	<ul>
		{% for article in blog.articles %}<li class="{% if bigNext == bigIndex %}wide{% assign bigNext = bigNext|plus:bigCount %}{% if bigCount == 3 %}{% assign bigCount = 1 %}{% else %}{% assign bigCount = 3 %}{% endif %}{% endif %}">
				{{article.content}}
				{% assign bigIndex = bigIndex|plus:1 %}
			</li>{% endfor %}
	</ul>

	</div>		
</div>



	