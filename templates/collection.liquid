{% if collection.handle == "all" %}
	<!-- Collection stagard -->
	{% include "collection-stagard" %}
{% else %}
	<div class="collections">
		<div>
		{% if collection.all_products_count > 0 %}
			{% assign section = "none"%}
			{% for product in collection.products %}
				
				{% assign pro_split = product.title | split: "|" %}
				{% assign pro_split_count = pro_split | size %}


				{% if pro_split_count > 2 %}
					{% assign productType = product.type | append: pro_split[1]%}
				{% else %}
					{% assign productType = product.type %}
				{% endif %}

				{% if productType != section %}
					</div>
					<h3 class="lined">{{productType}}</h3>
					<div class="subcollection">
					{% assign section = productType %}
				{% endif %}



<div class="productthumbnail">
	{% if pro_split_count > 2 %}
		<a href="{{product.url}}#{{pro_split[2] | handleize }}">
	{% else %}
		<a href="{{product.url}}#{{pro_split[1] | handleize }}">
	{% endif %}			
	
		<span class="text" href="#">
			<h3>{{pro_split | first}}</h3>
			{% if pro_split_count > 1 %}
			<h4>{{pro_split[2]}}</h4>
			{% endif %}			
		</span>

		<span class="backgroundimage" style="background-image:url({{ product.featured_image | product_img_url: 'large' }})"></span>
		
	
	</a>	
</div>




			{% endfor %}

		{% else %}
			<p>Sorry, there are no products in this collection</p>
		{% endif %}
	</div></div></div>
{% endif %}
