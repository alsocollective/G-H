<div class="slideshow">
	{% for article in blogs['info'].articles limit: 3 %}
		<div>{{article.content}}</div>
	{% endfor %}
</div>

<div class="infopage">
	{{ page.content }}

	{% assign pageArray = "return-exchange-policy,shipping,privacy-policy,return-policy" | split: "," %}

	{% for pageName in pageArray %}
	<div>
		<h3 id="{{pageName}}" class="lined">{{ pages[pageName].title }}</h3>
		{{ pages[pageName].content }}
	</div>
	{% endfor %}
</div>

