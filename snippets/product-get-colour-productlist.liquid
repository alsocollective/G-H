{% if skip_product_split_count > 2%}
	{% for product in products %}
		{% assign productSplit = product.title | split: "|" %}
		{% if productSplit[0] == skip_product_split[0] and productSplit[1] == skip_product_split[1]%}
			{% if includeColours == 0 %}
				{% assign product0 = product%}
			{% elsif includeColours == 1 %}
				{% assign product1 = product%}	
			{% elsif includeColours == 2 %}
				{% assign product2 = product%}
			{% elsif includeColours == 3 %}
				{% assign product3 = product%}
			{% endif %}
			{% assign includeColours = includeColours | plus: 1 %}
		{%endif%}{% endfor %}
{% else %}
	{% for product in products %}
		{% assign productSplit = product.title | split: "|" | first %}
		{% if productSplit == skip_product_split[0] %}
			{% if includeColours == 0 %}
				{% assign product0 = product%}
			{% elsif includeColours == 1 %}
				{% assign product1 = product%}	
			{% elsif includeColours == 2 %}
				{% assign product2 = product%}
			{% elsif includeColours == 3 %}
				{% assign product3 = product%}
			{% endif %}
			{% assign includeColours = includeColours | plus: 1 %}
		{%endif%}
	{% endfor %}
{% endif %}
